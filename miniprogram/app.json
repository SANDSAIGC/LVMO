{
  "pages": [
    "pages/index/index",
    "pages/auth/login",
    "pages/auth/confirm",
    "pages/connect/connect",
    "pages/service/service",
    "pages/massage/massage",
    "pages/history/history",
    "pages/user/user"
  ],
  "subPackages": [
    {
      "root": "pages_sub/massage",
      "name": "massage",
      "pages": [
        "mode/mode",
        "intensity/intensity",
        "duration/duration"
      ]
    },
    {
      "root": "pages_sub/user",
      "name": "user",
      "pages": [
        "history/history",
        "coupon/coupon",
        "settings/settings",
        "about/about",
        "feedback/feedback"
      ]
    }
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#1a1a2e",
    "navigationBarTitleText": "旅摩按摩椅",
    "navigationBarTextStyle": "white",
    "backgroundColor": "#0f0f23",
    "enablePullDownRefresh": false
  },
  "tabBar": {
    "color": "#8a8a8a",
    "selectedColor": "#6c5ce7",
    "backgroundColor": "#1a1a2e",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "images/icon_home.png",
        "selectedIconPath": "images/icon_home_selected.png"
      },
      {
        "pagePath": "pages/service/service",
        "text": "服务",
        "iconPath": "images/icon_service.png",
        "selectedIconPath": "images/icon_service.png"
      },
      {
        "pagePath": "pages/history/history",
        "text": "记录",
        "iconPath": "images/icon_history.png",
        "selectedIconPath": "images/icon_history.png"
      },
      {
        "pagePath": "pages/user/user",
        "text": "我的",
        "iconPath": "images/icon_user.png",
        "selectedIconPath": "images/icon_user_selected.png"
      }
    ]
  },
  "networkTimeout": {
    "request": 10000,
    "downloadFile": 10000
  },
  "debug": false,
  "navigateToMiniProgramAppIdList": [],
  "permission": {
    "scope.userLocation": {
      "desc": "您的位置信息将用于查找附近的按摩椅设备"
    },
    "scope.bluetooth": {
      "desc": "需要蓝牙权限来连接按摩椅设备"
    }
  },
  "requiredBackgroundModes": [
    "bluetooth-central"
  ],
  "plugins": {},
  "resizable": true,
  "sitemapLocation": "sitemap.json",
  "style": "v2",
  "componentFramework": "glass-easel",
  "renderer": "skyline",
  "rendererOptions": {
    "skyline": {
      "defaultDisplayBlock": true,
      "disableABTest": false
    }
  },
  "darkmode": true,
  "themeLocation": "theme.json",
  "lazyCodeLoading": "requiredComponents"
}