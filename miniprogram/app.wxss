/**app.wxss**/
@import './styles/theme/tdesign-theme.wxss';

/* 全局样式 */
/** Global Page Defaults **/
page {
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
  color: #FFFFFF; /* Default text color */
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  box-sizing: border-box;
  min-height: 100vh; /* Ensure gradient covers full viewport height */
}

*,
*::before,
*::after {
  box-sizing: inherit;
  margin: 0; /* Basic reset */
  padding: 0; /* Basic reset */
}

/** Common Container View (if a wrapper is used inside page) **/
.container {
  padding: 32rpx; /* Standard page padding */
  /* min-height: 100vh; Ensure this if page itself doesn't have min-height and gradient */
}


/** Common Card Style **/
.card {
  background: rgba(255, 255, 255, 0.08);
  /* backdrop-filter: blur(10px); */ /* Test in project if desired */
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 24rpx; /* Default card padding */
  margin-bottom: 32rpx; /* Default stacking margin */
  transition: all 0.2s ease-out;
  width: 100%; /* Default to full width within its container */
}

.card:active {
  transform: scale(0.98); /* Common tap feedback */
  background: rgba(255, 255, 255, 0.12);
}

/** Primary Button Style **/
.button-primary {
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  color: #FFFFFF;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 40rpx;
  text-align: center;
  border: none;
  display: block;
  width: 100%;
  text-decoration: none;
  overflow: hidden;
  transition: opacity 0.2s ease-out;
}
.button-primary:active {
  opacity: 0.8;
}
.button-primary[disabled], .button-primary.disabled {
  opacity: 0.5 !important; /* Ensure high specificity */
  background: rgba(255, 255, 255, 0.2) !important;
  color: rgba(255, 255, 255, 0.7) !important;
  cursor: not-allowed; /* For web, not applicable in mini-program directly but good practice */
}

/** Secondary Button Style **/
.button-secondary {
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.8);
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 40rpx;
  text-align: center;
  display: block;
  width: 100%;
  text-decoration: none;
  overflow: hidden;
  transition: background-color 0.2s ease-out;
}
.button-secondary:active {
  background-color: rgba(255, 255, 255, 0.15);
}
.button-secondary[disabled], .button-secondary.disabled {
  opacity: 0.5 !important;
  border-color: rgba(255, 255, 255, 0.2) !important;
  color: rgba(255, 255, 255, 0.5) !important;
  background: rgba(255, 255, 255, 0.05) !important;
  cursor: not-allowed;
}

/** Small Button Modifier **/
.small-button { /* Applied as an additional class */
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  padding: 0 24rpx;
}

/** Utility classes (optional but helpful) **/
.text-center {
  text-align: center;
}
.full-width {
  width: 100%;
}
/* Add more common utility classes as needed: .mt-16, .mb-32 etc. for margins based on 8rpx grid */

/* Tesla风格容器 */
.tesla-container {
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
  min-height: 100vh;
  padding: 0;
}

/* 玻璃拟态卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

/* 渐变按钮 */
.gradient-button {
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  border: none;
  border-radius: 12px;
  color: white;
  font-weight: 600;
  padding: 16px 32px;
  box-shadow: 0 4px 16px rgba(108, 92, 231, 0.3);
  transition: all 0.3s ease;
}

.gradient-button:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(108, 92, 231, 0.3);
}

/* 次要按钮 */
.secondary-button {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 12px;
  color: white;
  font-weight: 500;
  padding: 16px 32px;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.secondary-button:active {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(1px);
}

/* 输入框样式 */
.tesla-input {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  color: white;
  padding: 16px;
  backdrop-filter: blur(10px);
  font-size: 16px;
}

.tesla-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

/* 标题样式 */
.tesla-title {
  font-size: 28px;
  font-weight: 700;
  color: white;
  margin-bottom: 8px;
  text-align: center;
}

.tesla-subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  margin-bottom: 32px;
}

/* 状态指示器 */
.status-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  display: inline-block;
  margin-right: 8px;
}

.status-connected {
  background: #00b894;
  box-shadow: 0 0 8px rgba(0, 184, 148, 0.5);
}

.status-disconnected {
  background: #e17055;
  box-shadow: 0 0 8px rgba(225, 112, 85, 0.5);
}

.status-connecting {
  background: #fdcb6e;
  box-shadow: 0 0 8px rgba(253, 203, 110, 0.5);
  animation: pulse 2s infinite;
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

/* 滑块样式 */
.tesla-slider {
  -webkit-appearance: none;
  width: 100%;
  height: 6px;
  border-radius: 3px;
  background: rgba(255, 255, 255, 0.2);
  outline: none;
}

.tesla-slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(108, 92, 231, 0.4);
}

/* 开关样式 */
.tesla-switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}

.tesla-switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.tesla-switch-slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.2);
  transition: 0.4s;
  border-radius: 34px;
}

.tesla-switch-slider:before {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background: white;
  transition: 0.4s;
  border-radius: 50%;
}

input:checked + .tesla-switch-slider {
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
}

input:checked + .tesla-switch-slider:before {
  transform: translateX(26px);
}

/* 卡片列表 */
.card-list {
  padding: 16px;
}

.card-item {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.card-item:active {
  transform: translateY(2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

/* 图标样式 */
.icon {
  font-size: 24px;
  color: #6c5ce7;
  margin-right: 12px;
}

/* 徽章样式 */
.badge {
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  color: white;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
}

/* 分割线 */
.divider {
  height: 1px;
  background: rgba(255, 255, 255, 0.1);
  margin: 20px 0;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #6c5ce7;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: rgba(255, 255, 255, 0.6);
}

.empty-state .icon {
  font-size: 64px;
  margin-bottom: 16px;
  color: rgba(255, 255, 255, 0.3);
}

.empty-state .title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
  color: rgba(255, 255, 255, 0.8);
}

.empty-state .description {
  font-size: 14px;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .tesla-title {
    font-size: 24px;
  }
  
  .card-item {
    padding: 16px;
  }
  
  .gradient-button,
  .secondary-button {
    padding: 14px 24px;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
  }
}