/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* Tesla风格全局样式 */
page {
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 玻璃拟态效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 按钮样式 */
.tesla-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 12rpx;
  color: white;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.tesla-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

/* 文本样式 */
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 32rpx;
}

.text-primary {
  color: #667eea;
}

.text-secondary {
  color: rgba(255, 255, 255, 0.7);
}

/* 布局样式 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

/* 间距样式 */
.margin-top-small {
  margin-top: 16rpx;
}

.margin-top-medium {
  margin-top: 32rpx;
}

.margin-top-large {
  margin-top: 48rpx;
}

.padding-small {
  padding: 16rpx;
}

.padding-medium {
  padding: 32rpx;
}

.padding-large {
  padding: 48rpx;
}

/* 状态指示器 */
.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.status-connected {
  background: #4CAF50;
  box-shadow: 0 0 16rpx rgba(76, 175, 80, 0.5);
}

.status-disconnected {
  background: #f44336;
  box-shadow: 0 0 16rpx rgba(244, 67, 54, 0.5);
}

.status-connecting {
  background: #ff9800;
  box-shadow: 0 0 16rpx rgba(255, 152, 0, 0.5);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

/* 输入框样式 */
.input {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 24rpx;
  color: white;
  font-size: 32rpx;
}

.input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* 列表样式 */
.list-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.list-item:active {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(0.98);
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 64rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}