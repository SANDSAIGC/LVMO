/* miniprogram/pages/auth/login.wxss */
@import "/app.wxss";

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  /* background is now covered by global page style in app.wxss */
  padding: 32rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 48rpx;
}

/* .login-button is now .button-primary from app.wxss */
/* .guest-button is now .button-secondary from app.wxss */

.agreement {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.link {
  color: #6c5ce7;
  text-decoration: underline;
}