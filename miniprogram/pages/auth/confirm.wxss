/* miniprogram/pages/auth/confirm.wxss */
@import "/app.wxss";

.confirm-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  /* background is now covered by global page style in app.wxss */
  padding: 32rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.welcome {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 48rpx;
}

