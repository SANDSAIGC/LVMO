/* miniprogram/pages/auth/confirm.wxss */
.confirm-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
  padding: 40rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.welcome {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 80rpx;
}

.confirm-button {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
}

.edit-button {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  font-size: 32rpx;
  font-weight: 500;
}