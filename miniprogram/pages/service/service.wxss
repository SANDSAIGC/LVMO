/* miniprogram/pages/service/service.wxss */
@import "/app.wxss";

.service-container {
  padding: 32rpx;
  /* background and min-height are now covered by global page style in app.wxss */
}

.header {
  margin-bottom: 32rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: white;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.service-item {
  /* Properties covered by .card:
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
    padding: 24rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  */
  text-align: center;
  backdrop-filter: blur(10rpx); /* Specific to service-item */
}

.service-item:active {
  transform: scale(0.98); /* Covered by .card:active */
  background: rgba(255, 255, 255, 0.15); /* Slightly different from .card:active background (0.12), kept for now */
}

.icon-container {
  position: relative;
  margin-bottom: 16rpx;
}

.service-icon {
  width: 120rpx;
  height: 120rpx;
}

.favorite-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  z-index: 10;
}

.service-name {
  font-size: 32rpx;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.service-duration {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}