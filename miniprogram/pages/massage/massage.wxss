/* miniprogram/pages/massage/massage.wxss */
@import "/app.wxss"; /* For .card and button styles */

/* Page styles are now global in app.wxss */

.massage-container {
  padding: 32rpx;
  /* box-sizing: border-box; (Covered by global *) */
  /* min-height: 100vh; (Covered by global page) */
  display: flex;
  flex-direction: column;
}

/* Common Card Style is now global in app.wxss */
/* Specific card instances like .header-info, .animation-area, .controls-area */
/* will retain their own padding if different from global .card padding, */
/* and should be used as class="card header-info" etc. in WXML. */

.header-info {
  text-align: center;
  padding: 32rpx 24rpx;
}

.current-mode-name {
  font-size: 36rpx; /* Slightly smaller than page title, larger than card title */
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.timer-display {
  font-size: 72rpx; /* Prominent timer */
  font-weight: bold;
  color: #6c5ce7; /* Accent color for timer */
  display: block;
  margin-bottom: 16rpx;
  font-family: 'Courier New', Courier, monospace; /* Monospace for stable width */
}

.progress-bar-container {
  width: 100%;
  height: 16rpx; /* 2 * 8rpx */
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #6c5ce7; /* Accent color */
  border-radius: 8rpx;
  transition: width 0.5s ease-in-out;
}

.animation-area {
  flex-grow: 1; /* Allow this area to take up available space */
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx; /* Minimum height for the animation/diagram */
  padding: 16rpx;
}

.massage-animation-img {
  max-width: 100%;
  max-height: 300rpx; /* Adjust as needed */
}
.animation-placeholder-text {
    color: rgba(255,255,255,0.3);
    font-size: 28rpx;
}


.controls-area {
  padding: 32rpx 24rpx;
}

.control-group {
  margin-bottom: 32rpx;
}
.control-group:last-child {
  margin-bottom: 0;
}

.control-label {
  font-size: 28rpx; /* Body */
  color: rgba(255, 255, 255, 0.7);
  display: block;
  text-align: center;
  margin-bottom: 16rpx;
}

.intensity-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.intensity-value {
  font-size: 40rpx; /* H2 */
  font-weight: bold;
  min-width: 80rpx; /* Ensure space for value */
  text-align: center;
}

.control-button {
  /* Assuming button styles from app.wxss or local fallback */
  border-radius: 20rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx; /* Caption/Small */
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  min-height: auto; /* Override default button heights if necessary */
  line-height: 1.2; /* Adjust for multi-line text if icon + text */
}
.control-button:active {
  background: rgba(255, 255, 255, 0.15);
}
.control-button.icon-button {
    width: 88rpx; /* 11 * 8rpx */
    height: 88rpx;
    padding: 0; /* Reset padding if only icon */
}

.control-icon {
  width: 48rpx; /* 6 * 8rpx */
  height: 48rpx;
  margin-bottom: 0; /* If only icon */
}
.control-button .control-icon.large-icon {
    width: 64rpx; /* 8 * 8rpx */
    height: 64rpx;
    margin-bottom: 8rpx; /* Space between icon and text */
}


.main-controls {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx; /* 3 * 8rpx */
}

.main-action-button {
  height: 120rpx; /* Taller buttons for main actions */
  padding: 16rpx; /* Ensure content is centered */
}
.main-action-button.stop-button {
  background: rgba(231, 76, 60, 0.2); /* ErrorRed, translucent */
  border-color: rgba(231, 76, 60, 0.4);
  color: #e74c3c;
}
.main-action-button.stop-button:active {
  background: rgba(231, 76, 60, 0.3);
}

